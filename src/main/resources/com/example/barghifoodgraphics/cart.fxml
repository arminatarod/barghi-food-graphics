<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.barghifoodgraphics.cartController">
   <children>
      <HBox alignment="CENTER_LEFT" prefWidth="10000.0">
         <children>
            <Label onMouseClicked="#changeToUserPage" style="-fx-cursor: hand;" text="← Back" textFill="#1e78a0">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <Label text="Cart">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <TableView fx:id="cartTable" focusTraversable="false" onMouseClicked="#tableClicked" prefHeight="10000.0" prefWidth="10000.0">
        <columns>
            <TableColumn fx:id="number" editable="false" prefWidth="75.0" text="Number" />
            <TableColumn fx:id="item" editable="false" prefWidth="75.0" text="Item" />
            <TableColumn fx:id="unitPrice" editable="false" prefWidth="75.0" text="Unit price" />
            <TableColumn fx:id="quantity" editable="false" prefWidth="75.0" text="Quantity" />
            <TableColumn fx:id="totalPrice" editable="false" prefWidth="75.0" text="Total price" />
            <TableColumn fx:id="discount" editable="false" prefWidth="75.0" text="Discount" />
            <TableColumn fx:id="finalPrice" editable="false" prefWidth="75.0" text="Final price" />
        </columns>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </TableView>
      <HBox alignment="CENTER">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <children>
            <Button onMouseClicked="#increaseRow" mnemonicParsing="false" style="-fx-background-color: rgb(130,160,120);" text="Increase selected row" textAlignment="CENTER" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button onMouseClicked="#decreaseRow" focusTraversable="false" mnemonicParsing="false" style="-fx-background-color: rgb(160,0,0);" text="Decrease selected row" textAlignment="CENTER" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button onMouseClicked="#deleteRow" focusTraversable="false" mnemonicParsing="false" style="-fx-background-color: BLACK;" text="Delete selected row" textAlignment="CENTER" textFill="WHITE">
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Button focusTraversable="false" mnemonicParsing="false" text="Proceed to checkout">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
