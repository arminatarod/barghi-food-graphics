<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: DARKSEAGREEN;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.barghifoodgraphics.adminController">
   <children>
      <Label alignment="CENTER" prefHeight="40.0" prefWidth="1000.0" style="-fx-background-color: DARKOLIVEGREEN;" text="please select your restaurant" textFill="#f7f7f7">
         <font>
            <Font size="21.0" />
         </font>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <ListView fx:id="restaurantListView" onMouseClicked="#goToRestaurantPage" prefHeight="1000.0" prefWidth="560.0" style="-fx-background-color: DARKOLIVEGREEN;" stylesheets="@style.css">
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </ListView>
      <Button fx:id="AddNewRestaurantButton" mnemonicParsing="false" onMouseClicked="#addNewRestaurant" style="-fx-background-color: DARKOLIVEGREEN; -fx-text-fill: white;" text="Add new restaurant">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
