<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.barghifoodgraphics.commentController">
   <children>
      <HBox alignment="CENTER_LEFT" prefWidth="10000.0">
         <children>
            <Label onMouseClicked="#changeToUserPage" style="-fx-cursor: hand;" text="← Back" textFill="#1e78a0">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="10000.0" style="-fx-border-color: rgb(150,150,150); -fx-border-width: 0 0 1 0;" text="Comments">
         <font>
            <Font size="24.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </Label>
      <ScrollPane fitToWidth="true" focusTraversable="false" prefWidth="10000.0" style="-fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-background-color: transparent;">
         <content>
            <VBox fx:id="commentContainer" alignment="TOP_CENTER" prefWidth="10000.0">
               <padding>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefWidth="10000.0" style="-fx-border-color: rgb(150,150,150); -fx-border-width: 1 0 0 0;">
         <children>
            <Button onMouseClicked="#addComment" mnemonicParsing="false" style="-fx-background-color: rgb(130,160,120);" text="Add comment" textFill="WHITE">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button onMouseClicked="#editComment" mnemonicParsing="false" style="-fx-background-color: rgb(200,170,70);" text="Edit comment" textFill="WHITE">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button onMouseClicked="#deleteComment" mnemonicParsing="false" style="-fx-background-color: rgb(160,0,0);" text="Delete comment" textFill="WHITE">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
